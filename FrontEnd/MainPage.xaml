<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HousePricePredictorUK.MainPage">

    <StackLayout Padding="20">
        <!-- Entry fields for user input -->
        <Entry x:Name="YearEntry" Placeholder="Year" Keyboard="Numeric" />
        <Entry x:Name="TownCityEntry" Placeholder="Town/City" />
        <Entry x:Name="CountyEntry" Placeholder="County" />
        <Entry x:Name="CurrentPriceEntry" Placeholder="Current Price" />
        <Entry x:Name="PropertyTypeEntry" Placeholder="Property Type" />
        <Switch x:Name="NewBuildSwitch" IsToggled="false" />

        <!-- Button to trigger prediction -->
        <Button Text="Predict" Clicked="OnPredictClicked" />

        <!-- Label to display the predicted price -->
        <Label x:Name="PredictionLabel" Text="Predicted Price: " />
    </StackLayout>

</ContentPage>
